{
    "cli": {
        "version": ">= 14.0.0",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "env": {
                "EXPO_PUBLIC_API_URL": "http://localhost:8000/api/v1"
            }
        },
        "preview": {
            "distribution": "internal",
            "env": {
                "EXPO_PUBLIC_API_URL": "REPLACE_WITH_CLOUD_RUN_URL"
            }
        },
        "production": {
            "env": {
                "EXPO_PUBLIC_API_URL": "REPLACE_WITH_CLOUD_RUN_URL"
            }
        }
    }
}